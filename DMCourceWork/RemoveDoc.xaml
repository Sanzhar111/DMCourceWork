<Window x:Class="DMCourceWork.RemoveDoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMCourceWork"
        mc:Ignorable="d"
        Title="RemoveDoc" Height="140" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/image/LoginBack.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Документ" FontSize="14"/>
        <ComboBox x:Name="Doc" Margin="0,0,0,0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="16"/>
        <Button x:Name="Change" Content="Удалить" Grid.Column="3" Grid.Row="2" Margin="0,0,0,0" Click="Button_Click"/>
    </Grid>
</Window>