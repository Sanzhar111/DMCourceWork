<Window x:Class="DMCourceWork.ChangeNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMCourceWork"
        mc:Ignorable="d"
        Title="ChangeNumber" Height="140" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/image/LoginBack.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Отдел" FontSize="14"/>
        <Label Content="Номер телефон" Grid.Column="1" FontSize="14"/>
        <TextBox x:Name="Phone" Margin="0,0,0,0" Grid.Row="1" Grid.Column="1" FontSize="16"/>
        <ComboBox x:Name="Otdel" Margin="0,0,0,0" Grid.Row="1" FontSize="16"/>
        <Button x:Name="Change" Content="Изменить" Grid.Column="3" Grid.Row="2" Margin="0,0,0,0" Click="Button_Click"/>
    </Grid>
</Window>
